# Future版本环境变量配置
# 生成时间: 2025-10-05
# 版本: Future v1.0

# 版本标识
VERSION_NAME=dao
VERSION_PREFIX=f_
VERSION_YEAR=2025

# MySQL配置
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=jobfirst_dao
MYSQL_USER=dao_user
MYSQL_PASSWORD=f_mysql_password_2025
MYSQL_ROOT_PASSWORD=f_mysql_root_2025

# PostgreSQL配置
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=f_pg
POSTGRES_USER=dao_user
POSTGRES_PASSWORD=f_postgres_password_2025

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=f_redis_password_2025

# Neo4j配置
NEO4J_HOST=localhost
NEO4J_PORT=7474
NEO4J_BOLT_PORT=7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=f_neo4j_password_2025
NEO4J_DATABASE=dao_graph

# Elasticsearch配置
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_SCHEME=http
ELASTICSEARCH_INDEX_PREFIX=jobfirst_dao

# Weaviate配置
WEAVIATE_HOST=localhost
WEAVIATE_PORT=8080
WEAVIATE_GRPC_PORT=8082
WEAVIATE_SCHEME=http

# SQLite配置
SQLITE_DATA_PATH=/app/data
SQLITE_USER_COUNT=5

# 数据目录配置
DATA_PATH=/opt/jobfirst-multi-version/dao/data
LOGS_PATH=/opt/jobfirst-multi-version/dao/logs
SCRIPTS_PATH=/opt/jobfirst-multi-version/dao/scripts

# 网络配置
NETWORK_NAME=dao-network
NETWORK_SUBNET=172.20.0.0/16

# 端口配置
MYSQL_EXTERNAL_PORT=3306
POSTGRES_EXTERNAL_PORT=5432
REDIS_EXTERNAL_PORT=6379
NEO4J_HTTP_EXTERNAL_PORT=7474
NEO4J_BOLT_EXTERNAL_PORT=7687
ELASTICSEARCH_EXTERNAL_PORT=9200
WEAVIATE_EXTERNAL_PORT=8080
WEAVIATE_GRPC_EXTERNAL_PORT=8082

# 安全配置
ENABLE_AUTH=true
ENABLE_SSL=false
ENABLE_BACKUP=true

# 监控配置
ENABLE_MONITORING=true
LOG_LEVEL=INFO
METRICS_ENABLED=true
